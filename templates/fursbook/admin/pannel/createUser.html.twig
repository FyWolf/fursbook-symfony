<div class="userCreation">
    <h1>User creation</h1>
    <form onSubmit="return createUser()" autocomplete="off">
        <input placeholder="Email" name="email" type="email" id="emailInput" maxlength="180" oninput="mailCheck()" autocomplete="new-password" pattern="(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|'(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21\x23-\x5b\x5d-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])*')@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21-\x5a\x53-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])+)\])" required>
        <input placeholder="Username" name="text" type="text" id="usernameInput" maxlength="25" oninput="usernameCheck()" autocomplete="new-password" pattern="^[a-zA-Z0-9](_(?!(\.|_))|\.(?!(_|\.))|[a-zA-Z0-9]){2,21}[a-zA-Z0-9]$" required>
        <input placeholder="Password" name="password" type="password" id="passwordInput" autocomplete="new-password" required>
        <textarea placeholder="Bio" maxlength="180" id="bio"></textarea>
        <input type="file" name="banner" id="banner">
        <input type="file" name="profilePicture" id="pfp">
        <button type="submit">create user</button>
    </form>
</div>